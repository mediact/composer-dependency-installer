{
    "name": "mediact/composer-dependency-installer",
    "description": "Install Composer dependencies.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MediaCT",
            "email": "contact@mediact.nl"
        },
        {
            "name": "Klaas Sangers",
            "role": "developer"
        },
        {
            "name": "Jan-Marten de Boer",
            "role": "developer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^7.0",
        "composer/composer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable",
        "mediact/testing-suite": "dev-feature/support-composer-v2",
        "kint-php/kint": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Mediact\\Composer\\DependencyInstaller\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mediact\\Composer\\DependencyInstaller\\Tests\\": "tests"
        }
    }
}
